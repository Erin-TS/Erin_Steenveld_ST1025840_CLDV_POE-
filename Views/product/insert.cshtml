@{
    ViewData["Title"] = "insert";
}

<h1>Insert Products</h1>
<p>
    Please enter below the details of any product you wish to add to the database. Required details are the product's
    name, a description of the product, a price and finally the quantity that is in stock. Do not worry about a product
    ID as it will be generated automatically for you.
</p>

<body>
    <form action="insert" method="post">
        <p>Insert new products</p>
        <input type="text" name="ProductName" placeholder="ProductName" required>
        <input type="number" name="Price" placeholder="Price" required>
        <input type="text" name="Description" placeholder="Description" required>
        <input type="text" name="QuantityInStock" placeholder="Quantity In Stock" required>
        <input type="text" name="ImagePath" placeholder="Images/turtle 1.png" required>
        <input type="text" name="Category" placeholder="Category" required>
        <button type="submit">Insert</button>
    </form>
</body>