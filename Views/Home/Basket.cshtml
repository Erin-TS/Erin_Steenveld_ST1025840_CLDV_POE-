@model List<BasketItem>

<h1>Basket</h1>

@if (Model.Count == 0)
{
    <p>Your basket is empty.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
}
